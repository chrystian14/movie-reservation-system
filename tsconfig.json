{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "configs/*": ["configs/*"],
      "modules/*": ["modules/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },

  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/.*/**"]
}
